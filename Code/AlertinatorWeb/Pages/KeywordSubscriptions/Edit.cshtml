@page
@model AlertinatorWeb.Pages.KeywordSubscriptions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Keyword Subscription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="KeywordSubscription.ID" />
            <input type="hidden" asp-for="KeywordSubscription.UserID" />
            <div class="form-group">
                <label asp-for="KeywordSubscription.Keyword" class="control-label"></label>
                <input asp-for="KeywordSubscription.Keyword" class="form-control" />
                <span asp-validation-for="KeywordSubscription.Keyword" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="KeywordSubscription.SendEMail" /> @Html.DisplayNameFor(model => model.KeywordSubscription.SendEMail)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
