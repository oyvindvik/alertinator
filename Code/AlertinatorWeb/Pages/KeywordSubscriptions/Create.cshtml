@page
@model AlertinatorWeb.Pages.KeywordSubscriptions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>New Keyword Subscription</h4>
<p>
    Please enter the keyword string you wish to subscribe to.
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KeywordSubscription.Keyword" class="control-label"></label>
                <input asp-for="KeywordSubscription.Keyword" class="form-control" />
                <span asp-validation-for="KeywordSubscription.Keyword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="KeywordSubscription.SendEMail" /> @Html.DisplayNameFor(model => model.KeywordSubscription.SendEMail)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
